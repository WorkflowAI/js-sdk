{
  "name": "@workflowai/schema",
  "version": "1.0.6",
  "description": "workflowAI schema helpers",
  "author": "workflowAI",
  "homepage": "https://workflowai.ai",
  "keywords": [
    "workflowai",
    "ai",
    "llm"
  ],
  "types": "./dist/types/index.d.ts",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.20.2"
  },
  "scripts": {
    "-------- LINTING": "",
    "prettier:check": "prettier --check src/**/*.ts src/*.ts src/**/*.js src/*.js *.md --no-error-on-unmatched-pattern --config ../../configs/.prettierrc.json",
    "prettier:fix": "prettier --write src/**/*.ts src/*.ts src/**/*.js src/*.js *.md --ignore-unknown --no-error-on-unmatched-pattern --config ../../configs/.prettierrc.json",
    "lint:check": "eslint --config ../../configs/eslint.config.js --cache --ext .ts ./src",
    "lint:fix": "eslint --config ../../configs/eslint.config.js --cache --fix --ext .ts ./src",
    "check": "npm run lint:check && npm run prettier:check",
    "fix": "npm run lint:fix && npm run prettier:fix",
    "-------- BUILD": "",
    "clean": "rm -rf dist/*",
    "build:types": "tsc -p ./configs/tsconfig.types.json",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json && tsx ../../configs/postcjs.ts",
    "build:esm": "tsc -p ./configs/tsconfig.esm.json && tsx ../../configs/postesm.ts",
    "build:test": "tsc -p ./configs/tsconfig.test.json",
    "build": "npm run clean && npm run build:types && npm run build:cjs && npm run build:esm",
    "dry": "npm run build && npm pub --dry-run",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "json-schema-to-zod": "^2.1.1",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.1"
  }
}