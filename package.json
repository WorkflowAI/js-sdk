{
  "name": "@workflowai/workspaces",
  "private": true,
  "version": "1.4.0",
  "description": "Collection of TS/JS libraries, private and public, for workflowAI.",
  "author": "workflowAI",
  "homepage": "https://workflowai.ai",
  "workspaces": [
    "packages/schema",
    "packages/api",
    "packages/client"
  ],
  "devDependencies": {
    "@actions/core": "^1.10.1",
    "@jest/globals": "^29.4.3",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jest": "^29.2.2",
    "@types/minimist": "^1.2.5",
    "@types/node": "^18",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-require-extensions": "^0.1.3",
    "eslint-plugin-unused-imports": "^3.2.0",
    "husky": "^9.1.6",
    "jest": "^29.3.1",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^15.2.10",
    "minimist": "^1.2.8",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-xor": "^1.3.0",
    "tsx": "^4.1.2",
    "typescript": "^5.5.2"
  },
  "scripts": {
    "codegen": "npm run codegen --workspaces --if-present",
    "check": "npm run check --workspaces --if-present",
    "fix": "npm run fix --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test:watch": "npm run test:ts-jest --watch",
    "test": "npm run test:ts-jest --",
    "test:ts-jest": "npx jest",
    "set-version": "tsx bin/set-version.ts",
    "check-version": "tsx bin/check-version.ts",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint"
    ],
    "**/*.{json,md,yml,yaml,css,scss,html,js,jsx,ts,tsx}": [
      "prettier --check"
    ]
  }
}
