{
  "rootDir": "..",
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "packages/.*/src/.*\\.test\\.ts$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "coverageReporters": [
    "json-summary",
    "text",
    "lcov"
  ],
  "globals": {
    "ts-jest": {
      "tsConfig": "./configs/tsconfig.base.json"
    }
  },
  "automock": false,
  "setupFiles": [
    "./configs/setupJest.js"
  ]
}